<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accounting.mapper.JournalEntryDetailMapper">
    
    <select id="selectByEntryId" resultType="com.accounting.entity.JournalEntryDetail">
        SELECT * FROM journal_entry_detail WHERE entry_id = #{entryId}
    </select>
    
    <delete id="deleteByEntryId">
        DELETE FROM journal_entry_detail WHERE entry_id = #{entryId}
    </delete>
    
    <insert id="batchInsert">
        INSERT INTO journal_entry_detail(entry_id, subject_id, debit_amount, credit_amount, remark)
        VALUES
        <foreach collection="details" item="detail" separator=",">
            (#{detail.entryId}, #{detail.subjectId}, #{detail.debitAmount}, #{detail.creditAmount}, #{detail.remark})
        </foreach>
    </insert>
</mapper>